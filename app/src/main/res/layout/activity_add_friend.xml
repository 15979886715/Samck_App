<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_friend"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ldu.guofeng.imdemo.activity.AddFriendActivity">

    <include layout="@layout/common_return_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="0dp"
            android:layout_height="@dimen/toolbar_height"
            android:layout_below="@+id/comm"
            android:layout_marginBottom="4dp"
            android:background="@drawable/register_edit_bg"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:layout_weight="4"
            android:hint="请输入对方账号"
            android:paddingLeft="10dp"
            android:textColorHint="@color/hint"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_add"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:background="@drawable/login_btn_selector"
            android:text="添加"
            android:textColor="@android:color/white" />

    </LinearLayout>




</LinearLayout>
